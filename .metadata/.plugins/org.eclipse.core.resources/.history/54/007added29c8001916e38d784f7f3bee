package 자바3주차;

public class 연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 1; 

		
		for(int i =0; i<num+3 ; i++)
		{
			
			for(int j =0; j<1 ; j++)
			{
				System.out.print("aa");				
			}
			
			
			for(int k = 0; k<1 ; k++)
			{
				if(i!=0) 
				{
				System.out.print("bbbbbb");		
				}
				
			}
			
			for(int p = num+2 ; p<i ; p++)
			{
				System.out.print("cccc");
			}
			System.out.println();
		}
		
	}

}
