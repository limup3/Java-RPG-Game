package 자바3주차;

public class 연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 1; 

		
		for(int i =0; i<num+3 ; i++)
		{
			
			for(int j =0; j<=i ; j++)
			{
				if(i==0)
				{
					System.out.print("aa");
						
				}
				else if(i==num)
				{
					System.out.print("bbbbbb");
				}
				else
				{
					System.out.print("cccc");
				}
				
			}


			System.out.println();
		}
		
	}

}
