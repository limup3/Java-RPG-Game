				}
				System.out.println("");
			}
			else if(Num9 == 3)
			{
				if(knight.Gold>=300) //골드소드 구매
				{
					System.out.println("골드소드를 300G에 구매하셨습니다.");
					System.out.println("구매하신 무기는 자동장착됩니다.");
