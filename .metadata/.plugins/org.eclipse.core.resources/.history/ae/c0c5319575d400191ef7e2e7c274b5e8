				}
				System.out.println("");
			}
			else if(Num9 == 2)
			{
				if(knight.Gold>=200) //실버소드 구매
				{
					System.out.println("실버소드를 200G에 구매하셨습니다.");
					System.out.println("구매하신 무기는 자동장착됩니다.");
					knight.Gold-=200;
					knight.Power+=20;
					System.out.println("현재 소지골드 : "+knight.Gold);
					System.out.println("현재 공격력    : "+knight.Power);
				}
				else // 돈이 부족할때
				{
					System.out.println("");
