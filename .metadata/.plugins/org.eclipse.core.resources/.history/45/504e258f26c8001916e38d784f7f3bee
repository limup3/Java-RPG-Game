package 자바3주차;

public class 연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 1; 

		
		for(int i =0; i<num+3 ; i++)
		{
			
			for(int j =0; j<=i ; j++)
			{
				System.out.print("aa");				
			}
			
			for(int k = 0; k<num+3 ; k++)
			{
				if(i!=0) 
				{
					System.out.print("cc");	
				}
				
			}
			System.out.println();
		}
		
	}

}
