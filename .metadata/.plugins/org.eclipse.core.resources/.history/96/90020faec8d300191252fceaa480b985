package 클래스;

import java.io.File;

import javax.sound.sampled.AudioFormat;
import javax.sound.sampled.AudioInputStream;
import javax.sound.sampled.AudioSystem;
import javax.sound.sampled.Clip;
import javax.sound.sampled.DataLine;

public class MediaTitle extends Thread {
	
private boolean stop; // stop 플래그
	
	MediaTitle() {
		this.stop = false;
	}
	public void abc() {
		
		File bgm;
		AudioInputStream stream;
		AudioFormat format;
		DataLine.Info info;
		Clip clip;
		bgm = new File("C:/Users/KM-notebook/Desktop/팀노바/5주차 자바 쓰레드/wav/Adventure-Master-Title.wav"); // 사용시에는 개별 폴더로 변경할 것
		
		try {
			stream = AudioSystem.getAudioInputStream(bgm);
			format = stream.getFormat();
			info = new DataLine.Info(Clip.class, format);
			clip = (Clip)AudioSystem.getLine(info);
			clip.open(stream);
			clip.start();


		} catch (Exception e) {
			System.out.println("err : " + e);
			}
		
	}

	public void run() {
		MediaTitle test = new MediaTitle();
		while(!stop) {
			try {
				test.abc();
				Thread.sleep(15000);
				 
			} catch(Exception e) {
				
			}
		}
	}		
	public void threadStop(boolean stop){
		this.stop = stop;
		}
	
	



}

