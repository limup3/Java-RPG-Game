package 자바3주차;

import java.util.Scanner;

public class 도형과제 {

	public static void main(String[] args) {

		System.out.println("마름모의 크기를 정수로 입력하세요 .");
		System.out.print("입력 : ");
		
		Scanner sc = new Scanner(System.in);
		
		String Rhombus = sc.nextLine();
		
		int Rhombus_Num = Integer.parseInt(Rhombus); //Rhombus = 마름모
		
		Rhombus_Num+=1;
		
		for(int Tri_First = 0 ; Tri_First<Rhombus_Num ; Tri_First++) //마름모 삼각형 Triangle
		{
			for(int Tri_Second =Rhombus_Num ; Tri_Second>Tri_First; Tri_Second--) //Tri_First for문 안의 중첩포문 Tri_Second
			{
				System.out.print(" ");
			}
			
			for(int Tri_Third = 0 ; Tri_Third<Tri_First ; Tri_Third++) // Tri_First for문 안의 중첩포문 Tri_Third
			{
				System.out.print(".");
			}
			
			for(int Tri_Four = 0 ;Tri_Four<Tri_First ; Tri_Four++) // Tri_First for문 안의 중첩포문 Tri_Four
			{
				System.out.print(".");
			}
			System.out.println(".");
		}

		for (int Rev_First = 0 ; Rev_First<Rhombus_Num-1 ; Rev_First++) //마름모 역삼각형 Reverse Triangle
		{		System.out.print(" ");
		
			for (int Rev_Second = 0 ; Rev_Second<=Rev_First ; Rev_Second++) // Rev_First for문 안의 중첩포문 Second
																															
			{
				System.out.print(" ");
			}
			for(int Rev_Third = Rhombus_Num-2 ; Rev_Third>Rev_First ; Rev_Third--) // Third
			{
				System.out.print(".");
			}
			for(int Rev_Four = Rhombus_Num-2 ; Rev_Four>Rev_First ; Rev_Four--) // Four
			{
				System.out.print(".");
			}
		
			System.out.println(".");
		}
		
		System.out.println("별의 크기를 정수로 입력하세요 .");
		System.out.print("입력 : ");
		
		Scanner sc = new Scanner(System.in);
		
		String Star = sc.nextLine();
		
		int Star_Num = Integer.parseInt(Star); //Star = 별
	

		for(int H_First=0; H_First<Star_Num+3; H_First++) //Star의 머리부분 Head_First
		{
			for(int H_Second=Star_Num+2; H_Second>H_First; H_Second--) //Head_First for문의 중첩포문 Head_Second
			{
				System.out.print("  ");
			}
			for(int H_Third=0; H_Third<H_First; H_Third++) // Third
			{
				if(H_Third!=Star_Num+3)						// 중첩for문 Third가 Num+3이 아닐시 공백 출력 , 가로 +3 세로 -1을 표현하기위해 사용 (가로표현)
				System.out.print("  ");
			}
			for(int H_Four=Star_Num+3; H_Four>H_First; H_Four--) //Four
			{
				
				if(H_Four!=H_First+1)							// Four이 First+1이 아닐시 공백 출력 , 가로 +3 세로 -1을 표현하기위해 사용 (세로 표현)
				{
					System.out.print(" "); 
				}
			}
			for(int H_Five=0; H_Five<H_First ; H_Five++)  // Five
			{
				System.out.print("aa");
			}
			if(H_First==0)	//꼭대기 하나 출력하기 위해서 if문 사용
			{
				System.out.print("a");
			}
			System.out.println("");
		}
		
		for(int B_First = 0 ; B_First<Star_Num+2 ; B_First++) //Star의 몸통부분 Body_First
		{	
			
			for(int B_Second = 0 ; B_Second<B_First ; B_Second++) // Second 공백표현
			{
				System.out.print(" ");
			}
			for(int B_Third= 0; B_Third<B_First; B_Third++) // Third
			{
				if(B_First!=0) //B_First가 0이 아닐때 "aaaa"  가로 +3 세로 +2 출력하기위해 사용
				{
					System.out.print("aaaa");	
				}
			}		
			for(int B_Four = Star_Num+2; B_Four>B_First ; B_Four--) // Four
			{
				System.out.print("aaaaaa");
								
			}

			System.out.println("");
	}
		for(int BB_First = 0 ; BB_First<Star_Num+1 ; BB_First++) //몸통 뒤에부분 Body Behind_First
		{	
			
			for(int BB_Second = Star_Num ; BB_Second>BB_First ; BB_Second--) //Second
			{
				System.out.print(" ");
			}
			for(int BB_Third= Star_Num; BB_Third>BB_First; BB_Third--) //Third
			{
				if(BB_First!=Star_Num) //BB_First!가 Star_Num이 아닐때 "aaaa"출력 몸통 위에 부분과 마찬가지로 가로와 세로가 일정하게 출력하게하기위해 사용
				{
					System.out.print("aaaa");	
				}
				
			}		
			for(int BB_Four = 0; BB_Four<=BB_First+1 ; BB_Four++) //Four
			{
				System.out.print("aaaaaa");
								
			}

			System.out.println("");
	}

		for(int L_First=0; L_First<Star_Num+3; L_First++) //Star의 다리부분 Leg_First
		{
			for(int L_Second=Star_Num+2; L_Second>L_First; L_Second--) //Second
			{
				System.out.print("  ");
			}
			for(int L_Third=0 ; L_Third<L_First; L_Third++) //Third
			{
				System.out.print("   ");
			}
		
			for(int L_Four=Star_Num+2; L_Four>L_First ; L_Four--) //Four
			{
				System.out.print("aa");
			}
			if(L_First==Star_Num+2) //마찬가지로 가로 세로 일정하게 출력하지않게하기위해
			{
				System.out.print("a");
			}
			System.out.println("");
		}
		
		
	}

}
